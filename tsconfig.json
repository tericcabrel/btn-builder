{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "target": "es5",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext",
      "es2015"
    ],
    "noEmit": true
  },
  "include": [
    "src",
    "global.d.ts",
    "renderEmail.tsx",
    "generateEmail.ts"
  ]
}
